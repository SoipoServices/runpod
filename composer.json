{
  "name": "soiposervices/runpod",
  "description": "A PHP client for the Runpod Deploy API",
  "keywords": ["runpod", "deploy", "php", "package"],
  "license": "MIT",
  "authors": [
    {
      "name": "Luigi Laezza",
      "email": "luigi@soiposervices.com"
    }
  ],
  "require": {
    "php": "^8.1.0",
    "saloonphp/saloon": "^3.0"
  },
  "require-dev": {
    "pestphp/pest": "^2.0.0",
    "pestphp/pest-plugin-arch": "2.x-dev",
    "phpstan/phpstan": "^1.9.11"
  },
  "autoload": {
    "psr-4": {
      "SoipoServices\\RunPod\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test:types": "phpstan analyse --ansi",
    "test:unit": "pest --colors=always",
    "test": [
      "@test:types",
      "@test:unit"
    ]
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
